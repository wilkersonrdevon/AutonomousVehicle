<?xml version="1.0"?>
<robot name = "vehicle">
    <!-- CHASSIS -->
    <link name = "base_link">
        <visual>
            <geometry>
                <box size = ".135 0.09 0.05"/>
            </geometry>
            <material name = "plastic">
                <color rgba = "0.2 0.2 0.2 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size = ".135 0.09 0.05"/>
            </geometry>
        </collision>
        <inertial>
            <mass value = "1.0"/>
            <inertia ixx = "0.015" iyy = "0.0375" izz = "0.000167"
                     ixy = "0"     ixz = "0"      iyz = "0"/>
        </inertial>
    </link>
    <!-- LEFT WHEEL -->
    <link name = "front_left_axle">
        <visual>
            <geometry>
                <cylinder length = "0.01" radius = "0.01"/>
            </geometry>
            <material name = "plastic">
                <color rgba = " 0.9 0.9 0.9 1"/>
            </material>
        </visual>
    </link>

    <joint name = "front_left_axle_joint" type = "fixed">
        <axis xyz = "0 0 1"/>
        <parent link = "base_link"/>
        <child link = "front_left_axle"/>
        <origin rpy = "1.5708 0 0" xyz = "0.04 0.05 -0.01"/>
    </joint>

    <link name = "front_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.025" radius="0.0342"/>
            </geometry>
            <material name = "rubber">
                <color rgba = "0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <inertial>
            <mass value = "0.1"/>
            <inertia ixx = "5.1458e-5" iyy = "5.1458e-5" izz = "6.125e-5"
                     ixy = "0"         ixz = "0"         iyz = "0"/>
        </inertial>
    </link>

    <joint name = "front_left_wheel_joint" type = "continuous">
        <axis xyz = "0 0 1"/>
        <parent link = "front_left_axle"/>
        <child link = "front_left_wheel"/>
        <origin rpy = "0 0 0" xyz = "0 0 -0.01"/>
    </joint>
    <!-- RIGHT WHEEL -->
    <link name = "front_right_axle">
        <visual>
            <geometry>
                <cylinder length = "0.01" radius = "0.01"/>
            </geometry>
            <material name = "plastic">
                <color rgba = " 0.9 0.9 0.9 1"/>
            </material>
        </visual>
    </link>

    <joint name = "front_right_axle_joint" type = "fixed">
        <axis xyz = "0 0 1"/>
        <parent link = "base_link"/>
        <child link = "front_right_axle"/>
        <origin rpy = "1.5708 0 0" xyz = "0.04 -0.05 -0.01"/>
    </joint>

    <link name = "front_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.025" radius="0.0342"/>
            </geometry>
            <material name = "rubber">
                <color rgba = "0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <inertial>
            <mass value = "0.1"/>
            <inertia ixx = "5.1458e-5" iyy = "5.1458e-5" izz = "6.125e-5"
                     ixy = "0"         ixz = "0"         iyz = "0"/>
        </inertial>
    </link>

    <joint name = "front_right_wheel_joint" type = "continuous">
        <axis xyz = "0 0 1"/>
        <parent link = "front_right_axle"/>
        <child link = "front_right_wheel"/>
        <origin rpy = "0 0 0" xyz = "0 0 0.01"/>
    </joint>
    <!-- BACK CASTER -->
    <link name = "middle_back_caster">
        <visual>
            <geometry>
                <sphere radius = "0.0127"/>
            </geometry>
            <material name = "plastic"/>
                <color rgba = "0.2 0.2 0.2 1"/>
        </visual>
        <inertial>
            <mass value = "0.01"/>
            <inertia ixx = "5.1458e-5" iyy = "5.1458e-5" izz = "6.125e-5"
                     ixy = "0"         ixz = "0"         iyz = "0"/>
        </inertial>
    </link>
    
    <joint name = "middle_back_caster_joint" type = "continuous">
        <axis xyz = "-0.3 0 -0.45"/>
        <parent link = "base_link"/>
        <child link = "middle_back_caster"/>
        <origin rpy = "0 0 0" xyz = "-0.04 0 -0.033"/>
    </joint>

</robot>